<section class="viewProfile">
<div class="container mx-auto mt-8">
    <div class="flex items-center justify-around ml-24">
        <div class="w-1/3"> 
           <img src="<%=(users.profilepicPath!=="")?users.profilepicPath:"/images/noProfilepic.png"%>" class="w-40 h-40 rounded-full" alt="">
        </div>
        <div class="w-2/3 block">
             <h1 class="text-4xl font-bold text-black"><%=users.name%></h1>
             <div class="mt-4">
                 <ul class="flex">
                     <li class=" text-xl pr-4"><span><%=posts.length%></span> Posts</li>
                     <li class="text-xl pr-4"><span><a href="/followers/<%=users._id%>"><%=followers%></span> Followers</a></li>
                     <li class="text-xl pr-4"><span><a href="/following/<%=users._id%>"><%=following%></span> Following</a></li>
                 </ul>
             </div>
             <p class="text-xl font-bold mt-8  text-black"><%=users.bio%></p>
        </div>
    </div>
    <div class="mx-auto ml-24 mt-16">
      <h1 class="font-bold text-3xl mb-4">Posts</h1>
      <%if(posts.length==0){%>
        <div class="container w-1/2 mx-auto items-center mt-16 ml-96">
           <img src="/images/no-post.png" alt="">
           <h1 class="text-xl font-bold">NO POST TO SHOW!</h1>
        </div>
        <%} else {%>
      <div class="grid grid-cols-4 row-gap-4 col-gap-4">
          <% for( var post of posts) {%>
           <div class="w-64 m-2">
             <img src="/uploads/postImage/<%=post.postImage%>" class="w-64 h-64" alt="">
           </div>
          <%}%>
      </div>
      <%}%>
    </div>
</div>
</section>