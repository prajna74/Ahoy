<section>
    <div class="container mx-auto bg-gray w-1/2">
        <h1 class="font-bold text-2xl">All Friends</h1>
        <div>
            <form class="/allFriends" method="get">
              <input class="rounded-l-lg p-4 border-t mr-0 border-b border-l text-gray-800 border-gray-200 bg-white" name="searchuser" placeholder="Find friends"/>
              <button class="px-8 rounded-r-lg btn-search  text-white font-bold p-4 uppercase border-white-500 border-t border-b border-r">Search</button>
          </form>
        </div>
        <%for(var friend of users){%>
            <div class="flex items-center justify-around mt-8 mb-4">
                <div class="w-1/2 flex items-center">
                    <img src="<%=(friend.profilepicPath!==""?friend.profilepicPath:"/images/noProfilepic.png")%>" class="w-24 h-24 rounded-full" alt="">
                    <div>
                    <h1 class="text-2xl font-bold ml-4"><%=friend.name%></h1>
                    <p class="text-medium ml-4"><%=friend.bio%></p>
                    </div>
                </div>
                <div class="w-1/2">
                <a href="/viewProfile/<%=friend._id%>" class="font-bold btn-viewProfile inline-block px-4 py-2 rounded-full mr-8">View Profile</a>
                <button  data-id="<%=JSON.stringify(friend)%>" class="font-bold btn-follow inline-block px-4 py-2 rounded-full">+ Follow</button>
            </div>
            </div>
            <%}%>
    </div>
</section>